{
	"name": "@meteozdemir/eslint-config-react",
	"version": "1.0.3",
	"description": "Custom ESLint settings for React as an extensible shared config.",
	"main": "index.js",
	"scripts": {
		"js-lint": "eslint **/*.{js,jsx,cjs,mjs,ts}",
		"js-fix": "eslint --fix **/*.{js,jsx,cjs,mjs,ts}",
		"md-lint": "markdownlint **/*.md",
		"md-fix": "markdownlint --fix **/*.md",
		"prettier-lint": "prettier --check **/*.{html,?(s)css,js,jsx,json,cjs,mjs,y?(a)ml}",
		"prettier-fix": "prettier --write **/*.{html,?(s)css,js,jsx,json,cjs,mjs,y?(a)ml}",
		"rules-unused": "eslint-find-rules -u .eslintrc.js",
		"rules-deprecated": "eslint-find-rules -d .eslintrc.js",
		"rules-plugin": "eslint-find-rules -p .eslintrc.js",
		"postinstall": "node ./scripts/postinstall.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/OlcayMeteOzdemir/eslint-config-react.git"
	},
	"keywords": [
		"javascript",
		"react",
		"eslint",
		"eslint-config"
	],
	"author": "Olcay Mete Ozdemir",
	"license": "MIT",
	"homepage": "https://github.com/OlcayMeteOzdemir/eslint-config-react#readme",
	"dependencies": {
		"@meteozdemir/eslint-config-core": "^1.2.1"
	},
	"devDependencies": {
		"@meteozdemir/markdownlint-config-core": "^1.0.0",
		"@meteozdemir/prettier-config-core": "^1.0.3",
		"eslint": "^8.30.0",
		"eslint-find-rules": "^4.1.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.11",
		"eslint-plugin-react-hooks": "^4.6.0",
		"markdownlint-cli": "^0.32.2",
		"prettier": "^2.8.1"
	},
	"peerDependencies": {
		"eslint": "^8.30.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.11",
		"eslint-plugin-react-hooks": "^4.6.0"
	}
}
